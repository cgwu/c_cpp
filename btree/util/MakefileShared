############################################################# 
# Makefile for shared library.
# 编译动态链接库
#############################################################
#set your own environment option
CC = gcc
CC_FLAG = -fPIC

#set your inc and lib
INC = 
LIB =

#make target lib and relevant obj 
PRG = libutil.so
OBJ = math.o lang.o

#all target
all:$(PRG)

$(PRG):$(OBJ)
	$(CC) -shared -o $@ $(OBJ) $(LIB)

.SUFFIXES: .c .o .cpp
#old style:相当于 %.o: %.c
#.cpp.o:
%.o: %.c
	$(CC) $(CC_FLAG) $(INC) -c $< -o $@

.PRONY:clean
clean:
	@echo 移除目标文件...;
	rm -f $(OBJ) $(PRG)

